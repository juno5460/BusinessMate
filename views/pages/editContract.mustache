	<link rel="stylesheet" href="{{{path.assets}}}/css/bootstrap-timepicker.css" />	
	<link rel="stylesheet" href="{{{path.assets}}}/css/datepicker.css" />	



	<input id="contractID" type="hidden" value="{{params._id}}">
	<form id="validateForm">
	<div class="widget-box transparent">
		<div class="widget-header">
			<h3 class="smaller lighter green">合同基本信息</h3>
			<div class="widget-toolbar no-border">
				<div clas="btn-group">
					<button id="templateBtn" data-toggle="dropdown" class="btn btn-small btn-info dropdown-toggle span12"> 
						使用模板 
						<i class="icon-angle-down icon-on-right"></i>
					</button>

					<ul id="templateList" class="dropdown-menu pull-right"></ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row-fluid">
		<div class="form-horizontal">
			<div class="control-group">
				<label class="control-label">合同编号</label>
				<div class="controls">
					<div class="span4 row-fluid">
						<input id="myId" name="myId" type="text"  class="span12" placeholder="合同编号"></div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">合同名称</label>
				<div class="controls">
					<div class="span4 row-fluid">
						<input id="name" name="name" type="text"  class="span12" placeholder="合同名称"></div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">甲方</label>
				<div class="controls">
					<div class="span4 row-fluid">
						<input id="partyA" name="partyA" type="text"  class="span12" placeholder="甲方"></div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">乙方</label>
				<div class="controls">
					<div class="span4 row-fluid">
						<input id="partyB" name="partyB" type="text"  class="span12" placeholder="乙方"></div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">签订日期</label>
				<div class="controls">
					<div class="row-fluid input-append date span6">
						 <div class="span8">
							<input name="signPicker" class="date-picker" id="signPicker" type="text" data-date-format="yyyy-mm-dd" readonly="true">	
							<span class="add-on"> <i class="icon-calendar"></i>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">开始日期</label>
				<div class="controls">
					<div class="row-fluid input-append date span6">
						<div class="span8">
							<input name="beginPicker" class="date-picker" id="beginPicker" type="text" data-date-format="yyyy-mm-dd" readonly="true">	
							<span class="add-on"> <i class="icon-calendar"></i>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">结束日期</label>
				<div class="controls">
					<div class="row-fluid input-append date span6">
						<div class="span8">
							<input name="endPicker" class="date-picker" id="endPicker" type="text" data-date-format="yyyy-mm-dd" readonly="true">	
							<span class="add-on">
								<i class="icon-calendar"></i>
							</span>
						</div>
					</div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">金额</label>
				<div class="controls">
					<div class="span4 row-fluid">
						<input  name="amount" id="amount" type="text"  class="span12" placeholder="金额"></div>
				</div>
			</div>
			<div class="control-group">
				<label class="control-label">状态</label>
				<div class="controls">
					<div class="span4 row-fluid">
						<input name="state"  id="state" type="text"  class="span12" placeholder="状态"></div>
				</div>
			</div>
		</div>
	</div>

	<div class="widget-box transparent">
		<div class="widget-header">
			<h3 class="smaller lighter green">合同事件列表</h3>
			<div class="widget-toolbar no-border">
				<div clas="btn-group">
					<button data-toggle="dropdown" class="btn btn-small btn-info dropdown-toggle span12"> 
						<i class="icon-plus icon-on-left"></i>
						增加事件 
						<i class="icon-angle-down icon-on-right"></i>
					</button>

					<ul class="dropdown-menu pull-right">
						<li id="customEventBtn">
							<a href="#">自定义事件</a>
						</li>

						<li id="priceEventBtn">
							<a href="#">回款事件</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</form>
	<div id="eventsList">
	</div>

	<div class="row-fluid bottom-cmd">
		<div class="span6 hidden-phone"></div>
		<div class="span2">
			<button id="deleteContractBtn" class="btn btn-danger span12">删除模板</button>
		</div>
		<div class="span2">
			<button id="saveAsTemplateBtn" class="btn btn-primary span12">保存为模板</button>
		</div>
		<div class="span2">
			<button id="saveBtn" class="btn btn-success span12" data-last="Finish">保存合同</button>
		</div>
	</div>