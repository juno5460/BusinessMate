
<div class="top-bar">
	<input id="keyword" type="text" class="span3 input-medium search-query" placeholder="编号、名称、日期">
		<div class="btn-group">
			<button id="searchBtn" class="btn btn-purple btn-small">　　搜　索　　</button>	
			<button id="drowdown" class="btn btn-purple btn-small dropdown-toggle">
				<span class="caret"></span>
			</button>
		</div>
	<a id="addContractBtn" class="btn btn-success btn-small span2 pull-right" type="button" href="contracts/new">
		添加新合同
	</a>
</div>

<div id="customSearchPanel" class="row-fluid">
	<div class="span6">
		<div class="baseBox">
			<a id="removeBtn"><i class="icon-remove remove"></i></a>
			<div class="search_title">高级搜索</div>
			<div id="typeGroup row-fluid" class="span12">
				<div class="span2">类　型:</div>
				<div class="span6 row-fluid">
					<div class="span3"><input id="search_check_id" type="checkbox"><span class="lbl">&nbsp;编号</span></div>
					<div class="span3"><input id="search_check_name" type="checkbox"><span class="lbl">&nbsp;名称</span></div>
					<div class="span3"><input id="search_check_remark" type="checkbox"><span class="lbl">&nbsp;备注</span></div>
				</div>
			</div>
			<div class="span12">
				<div class="span2 title">关键字:</div>
				<input id="search_keyword" type="text" class="span6">
			</div>
			<div class="span12">
				<div class="span2 title">日期:</div>
				<input id="beginDate" class="span3 date-picker" type="text" data-date-format="yyyy-mm-dd" readonly="true">&nbsp;到&nbsp;
				<input id="endDate" class="span3 date-picker" type="text" data-date-format="yyyy-mm-dd" readonly="true">
			</div>
			<div class="span12">
				<button id="search_btn" class="btn btn-small span3">搜　索</button>
			</div>
		</div>
	</div>
</div>

<div class="contract-content">
	<h3 class="header smaller lighter green">合同信息列表</h3>
	<div id="tip"></div>
	<table id="table_bug_report" class="table table-striped table-bordered table-hover" algin="center">
		<thead>
			<tr>
				<th class="center hidden-480">
					合同编号
				</th>
				<th class="center">合同名称</th>
				<th class="center">甲方</th>
				<th class="center">乙方</th>
				<th class="center">开始日期</th>
				<th class="center">结束日期</th>
				<th class="center hidden-480">签订日期</th>
				<th class="center">金额</th>
				<th class="center">状态</th>
			</tr>
		</thead>

		<tbody id="contractsTbody"></tbody>
	</table>
</div>