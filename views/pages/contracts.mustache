
<div class="top-bar row-fluid">
	<input id="keyword" type="text" class="search_input1 search-query" placeholder="编号、名称、日期">
		<div class="btn-group">
			<button id="searchBtn" class="btn btn-purple btn-small">　　搜　索　　</button>	
			<button id="drowdown" class="btn btn-purple btn-small dropdown-toggle">
				<span class="caret"></span>
			</button>
		</div>
	<a id="addContractBtn" class="span2 btn btn-success btn-small pull-right" type="button" href="contracts/new">
		添加新合同
	</a>
</div>

<div id="custom_search_panel" class="row-fluid">
	<div class="span12 basebox">
			<span>高级搜索</span>
			<a id="removeBtn"><i class="icon-remove remove"></i></a>
		<div class="search_type search_group">
			<span>类　型:</span>
			<span class="group_right">
				<span class="type_item"><input id="search_check_id" type="checkbox" checked="check"><span class="lbl">&nbsp;编号</span></span>
				<span class="type_item"><input id="search_check_name" type="checkbox" checked="check"><span class="lbl">&nbsp;名称</span></span>
				<span class="type_item"><input id="search_check_partyA" type="checkbox" checked="check"><span class="lbl">&nbsp;甲方</span></span>
				<span class="type_item"><input id="search_check_partyB" type="checkbox" checked="check"><span class="lbl">&nbsp;乙方</span></span>
			</span>
		</div>
		<div class="search_key search_group">
			<span class="keyword_title">关键字:</span>
			<span><input id="search_keyword" class="group_right search_input" type="text"></span>
		</div>
		<div class="search_group">
			<span>时　间:</span>
			<span class="group_right">
				<span><input id="beginDate" class="date-picker search_date" type="text" data-date-format="yyyy-mm-dd" readonly="true"></span>
				至
				<span><input id="endDate" class="date-picker search_date" type="text" data-date-format="yyyy-mm-dd" readonly="true"></span>
			</span>
		</div>

			
		<div class="row-fluid">
			<button id="search_btn" class="span2 btn btn-info btn-small">搜　索</button>
			<button id="thisYear_btn" class="span2 btn btn-small hidden-480">今年</button>
			<button id="lastYear_btn" class="span2 btn btn-small hidden-480">去年</button>
		</div>
	</div>
</div>

<div class="contract-content">
	<h3 class="header smaller lighter green">合同信息列表</h3>
	<div id="tip"></div>
	<table id="table_bug_report" class="table table-striped table-bordered table-hover" algin="center">
		<thead>
			<tr>
				<th class="center hidden-480">
					合同编号
				</th>
				<th class="center">合同名称</th>
				<th class="center">甲方</th>
				<th class="center">乙方</th>
				<th class="center">开始日期</th>
				<th class="center">结束日期</th>
				<th class="center hidden-480">签订日期</th>
				<th class="center">金额</th>
				<th class="center">状态</th>
			</tr>
		</thead>

		<tbody id="contractsTbody"></tbody>
	</table>
</div>